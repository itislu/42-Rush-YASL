#!yasl

{ print "\n" print } print_endl

{ = print } print_lossless

{ = ! } move

{
	print_endl
	1 exit
} error

{
	{
		"0" %< move:2 !
		"9" %> move:2 !
		2:||
	} is_not_int

	0:3
	[#] %? (
		#(
			3:=		// current index
			%]#[	// current char
			is_not_int ? ("Error: Not a positive integer!" error)
			!!
			3:(= 1 +):3
		)
	) : ("Error: No number given!" error)
} check_number


// 0: stack of params
// 1: current repeats
// 3: current index

!!

// argc check
# 1 <= ? ("Error: Need at least 2 parameters!" error)

0:move:1

1:check_number:1

1:eval:1

1:( 0 %<= ? ("Error: Number must be strictly positive!" error) ! ):1

{
	1:=:0

	#print_lossless !
	"\n" print

	1:(1 +):1	// increment
} print_n_times

// "World"
// "Hello"
// 0:-----

// 4
// 1:-----

