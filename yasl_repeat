#!./yasl_linux_x64

{ "\n" + print } print_endl

{ = ! } move

{ = print } print_lossless

{
	"Error: Invalid input!" print_endl
	1 exit
} error

{
	{
		"0" %< move:2 !
		"9" %> move:2 !
		2:||
	} is_not_int

	0:3
	[#] %? (
		#(
			3:=		// current index
			%]#[	// current char
			is_not_int ? error
			!!
			3:(= 1 +):3
		)
	) : error
} check_number


// 0: stack of params
// 1: current repeats
// 3: current index

!!

// argc check
# 1 <= ? error

0:move:1

1:check_number:1

1:eval:1

1:( 0 %<= ?error ! ):1

{
	1:=:0

	#print_lossless !
	"\n" print

	1:(1 +):1	// increment
} print_n_times

// "World"
// "Hello"
// 0:-----

// 4
// 1:-----

# #print_n_times
