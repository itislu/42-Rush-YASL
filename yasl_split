#!yasl

{ = ! } move

{
	[#] ? ("\n" + print "")
} print_word

{ = print } print_lossless

{ print "\n" print } print_endl

{
	print_endl
	1 exit
} error

{ =:1 1:%== 1:! } is_sep

// 0: list
// 1: separator
// 2: current word
// 3: current index

!!

# 2 != ? ("Error: Need exactly 2 parameters!" error)
[#] 1 > ? ("Error: Separator cannot be more than 1 character!" error)

0:move:1

"":2
0:3
[#] %? (
	#(
		3:=		// current index
		%]#[	// current char
		is_sep ? (
			2:print_word:2
		) : (
			=:2
			2:+:2
		)
		!!
		3:(= 1 +):3
	)
	2:print_word:2
)
